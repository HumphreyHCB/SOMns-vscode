{
	"name": "somns-language-client",
	"description": "VSCode pluging for SOMns",
	"readme": "This plugin provides support for language server features as well as the debugger.",
	"author": "Stefan Marr",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "smarr",
	"engines": {
		"vscode": "^1.2.1"
	},
	"categories": [
		"Debuggers", "Languages"
	],
	"repository": {
		"type": "git",
		"url":  "https://github.com/smarr/SOMns-vscode.git"
	},
	"bugs": {
		"url": "https://github.com/smarr/SOMns-vscode/issues"
	},
	"activationEvents": [
		"onLanguage:SOM"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [{
			"id" : "SOM",
			"extensions" : [ ".som" ],
			"aliases": [ "SOMns", "som" ]
		}],
		"grammars": [{
			"language": "SOM",
			"scopeName": "text.som",
			"path" : "./syntaxes/SOMns.tmLanguage"
		}],
		"breakpoints": [ { "language": "SOM" } ],
		"debuggers": [ {
			"type": "som",
			"label": "SOMns",
			"enableBreakpointsFor": { "languageIds": [ "SOM" ] },

			"program": "./out/src/debugger.js",
			"runtime": "node",
			
			"configurationAttributes": {
				"launch" : {
					"required" : [ "program", "cwd" ],
					"properties" : {
						"program" : {
							"type" : "string",
							"description" : "Path to the main program"
						},
						"cwd" : {
							"type" : "string",
							"description" : "Workding directory",
							"default" : "${workspaceRoot}"
						},
						"stopOnEntry" : {
							"type" : "boolean",
							"description" : "Automatically stop after launch",
							"default" : false
						},
						"runtime" : {
							"type" : "string",
							"description" : "Path to the SOMns interpreter",
							"default" : "/Users/smarr/Projects/SOM/SOMns/som"
						},
						"runtimeArgs" : {
							"type" : "array",
							"description" : "Optional interpreter arguments",
							"items" : { "type" : "string" },
							"default" : []
						}
					}
				},
				"attach" : {
					"required" : [ "port" ],
					"properties" : {
						"port" : {
							"type" : "number",
							"description" : "Debugger port of the interpreter",
							"default" : 7977
						}
					}
				}
			},
			"initialConfigurations": [
				{ "name"    : "Launch SOM program",
				  "type"    : "som",
				  "request" : "launch",
				  "program" : "${workspaceRoot}/Application.som",
					"cwd"     : "${workspaceRoot}",
				  "stopOnEntry" : false
				},
				{ "name"    : "Attach to SOM program",
				  "type"    : "som",
				  "request" : "attach",
				  "port"    : 7977
				}
			]
		}]
	},	
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile":           "node ./node_modules/vscode/bin/compile -watch -p ./",
		"postinstall":       "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^1.8.10",
		"vscode":     "^0.11.15"
	},
	"dependencies": {
		"vscode-languageclient": "^2.3.0"
	}
}