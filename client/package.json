{
	"name": "language-client-example",
	"description": "VSCode pluging for the Truffle language server",
	"author": "Stefan Marr",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "smarr",
	"engines": {
		"vscode": "^0.10.10"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:SOM"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [{
			"id" : "SOM",
			"extensions" : [ ".som" ],
			"aliases": [ "SOMns", "som" ]
		}],
		"grammars": [{
			"language": "SOM",
			"scopeName": "text.som",
			"path" : "./syntaxes/SOMns.tmLanguage"
		}],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
	},	
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"

	},
	"devDependencies": {
		"typescript": "^1.8.9",
		"vscode": "^0.11.0"
	},
	"dependencies": {
		"vscode-languageclient": "^2.3.0"
	}
}